<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/card_adapter"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_evaluation"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5dp">

        <TextView
            android:id="@+id/tv_emp_name"
            style="@style/normal_textview"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/tv_start_date"
            style="@style/normal_textview"
            android:layout_below="@id/tv_emp_name"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_end_date"
            style="@style/normal_textview"
            android:layout_below="@id/tv_start_date"
            android:layout_marginRight="20dp" />
        <Button
            android:id="@+id/btn_cancel"
            style="@style/normal_textview"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_reject_fill"
            android:text="@string/cancel"
            android:visibility="gone"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
